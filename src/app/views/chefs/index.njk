{% extends "parts/adminLayout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/chefs.css">
    <link rel="stylesheet" href="/styles/container.css">
{% endblock head %}

{% block content %}

<section class="show-section">

        <header class="section-header">
        <h2>Gerenciar Chefs</h2>
        <a class="button" href="/admin/chefs/create">Cadastrar Chef</a>
    </header>

    <div class="cards-container">

        {% for chef in chefs %}
            <article class="card chef-card">

                <div class="card-image-container">
                    <img src="{{chef.file}}" alt="Foto de {{chef.name}}">
                </div>
                <div class="card-text-container">
                    <h4>{{chef.name}}</h4>
                    <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>

            </article>
        {% endfor %}

    </div>

</section>

{% endblock content %}