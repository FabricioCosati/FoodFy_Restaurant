{% extends "parts/adminLayout.njk" %}

{% block content %}

{% block head %}
    <link rel="stylesheet" href="/styles/chefs.css">
    <link rel="stylesheet" href="/styles/container.css">
{% endblock head %}

<section class="show-section">

    <header class="section-header">
        <h2>Chef: {{chef.name}}</h2>
        <a class="button" href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
    </header>

    <div class="image-container">
        <img src="{{file.src}}" alt="Foto de {{chef.name}}">
    </div>

    <div class="details">
        <h3>{{chef.name}}</h3>
        <p>{{chef.total_recipes}} receitas</p>
    </div>

    <h3>Receitas</h3>

    <article class="recipes-container">
        {% for recipe in recipes %}
            <div class= "cards-container show">
                    <div class="card-image-container show">
                        <img src="{{recipe.image.src}}" alt="{{recipe.title}}">
                    </div>
                    <div class="card-text-container">
                        <h4>{{recipe.title}}</h4>
                        <p>por {{chef.name}}</p>
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
            </div>
        {% endfor %}
    </article>

</section>

{% endblock content %}