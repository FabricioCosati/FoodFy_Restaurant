{% extends "parts/adminLayout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/container.css">
    <link rel="stylesheet" href="/styles/session.css">
    <script src="/scripts/scriptsValidation.js" defer></script>
{% endblock head %}

{% block content %}

    <section class="form-group session">

        <div class="session-logo">
            <img src="/assets/logo.png" alt="Imagem de FoodFy">
        </div>

        <form action="/admin/forgotPassword" method="POST">

            <header class="form-header">
                <h2>Esqueceu a Senha?</h2>
            </header>

            <div class="fields">
                <div class="item">
                    <div>
                        <h2>Email</h2>
                    </div>
                    <div class="input-div"> 
                        <input 
                        type="email" 
                        name="email" 
                        value="{{user.email}}" 
                        placeholder="Digite seu email para recuperar sua senha" 
                        onblur="Validate.apply(this, 'isEmail')">
                    </div>
                </div>
            </div>

            <div class="form-footer reset">
                <button class="button" type="submit">Recuperar</button>
            </div>

        </form>
    </section>

{% endblock %}