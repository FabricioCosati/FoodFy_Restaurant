<div class="item">
    <div>
        <h2>Email</h2>
    </div>
    <div class="input-div"> 
        <input type="email" name="email" value="{{user.email}}" placeholder="Digite seu email" onblur="Validate.apply(this, 'isEmail')">
    </div>
</div>

<div class="item">
    <div>
        <h2>Senha</h2>
    </div>
    <div class="input-div">
        <input 
        type="password" 
        name="password" 
        {%if req.session.userId %} 
            placeholder="Digite sua senha para atualizar"
        {% else %}
            placeholder="Digite sua senha"
        {% endif %}>
    </div>
</div>
