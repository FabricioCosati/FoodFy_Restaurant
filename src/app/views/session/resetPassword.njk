{% extends "parts/adminLayout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/container.css">
    <link rel="stylesheet" href="/styles/session.css">
    <script src="/scripts/scriptsValidation.js" defer></script>
{% endblock head %}

{% block content %}

    <section class="form-group session">

        <div class="session-logo">
            <img src="/assets/logo.png" alt="Imagem de FoodFy">
        </div>

        <form action="/admin/resetPassword" method="POST">

            <header class="form-header">
                <h2>Redefinir Senha</h2>
            </header>

            <div class="fields">
                {% include 'session/reset-fields.njk' %}
            </div>

            <div class="form-footer reset">
                <button class="button" type="submit">Nova Senha</button>
            </div>

        </form>
    </section>

{% endblock %}