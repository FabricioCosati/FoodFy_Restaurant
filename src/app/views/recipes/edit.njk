{% extends "parts/adminLayout.njk" %}

{% block content %}

{% block head %}
    <link rel="stylesheet" href="/styles/recipes.css">
    <link rel="stylesheet" href="/styles/container.css">
    <script src="/scripts/scriptsAddItens.js" defer></script>
    <script src="/scripts/ScriptsImages.js" defer></script>
{% endblock head %}

    <section class="form-group">
        <form id="form-update" action="/admin/recipes?_method=PUT" method="POST" enctype="multipart/form-data">
            
            <header class="form-header">
                <h1>Editando Receita</h1>
                <div class="button-group">
                    <button form="form-delete" class="button button-delete" type="submit">Deletar</button>
                    <button form="form-update" class="button" type="submit">Salvar Receita</button>
                </div>
            </header>

            <div class="fields">
                {% include 'recipes/fields.njk' %}
            </div>

            <input type="hidden" name="id" value="{{recipe.id}}">

        </form>

        <form id="form-delete" action="/admin/recipes?_method=DELETE" method="POST">
            
            <input type="hidden" name="id" value="{{recipe.id}}">

        </form>

    </section>

{% endblock content %}