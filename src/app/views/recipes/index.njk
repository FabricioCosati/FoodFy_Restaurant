{% extends "parts/adminLayout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/recipes.css">
    <link rel="stylesheet" href="/styles/modalAndCards.css">
    <script src="/scripts/scriptsModal.js" defer></script>
{% endblock head %}

{% block modal %}
 <div class="modal">
        <div class="modal-content">
            <div class="card-modal">
                <img src="" alt="">
                <h4></h4>
                <p></p>
                <div class="close-modal">
                    <p>Fechar Modal</p>
                </div>
            </div>        
        </div>
    </div>
{% endblock modal %}

{% block content %}

<section class="recipes-section">

      <header class="section-header">
        <h2>Gerenciar Receitas</h2>
        <a class="button" href="/admin/create">Criar Receita</a>
    </header>

    <div class="recipes-container">

        {% for recipe in recipes %}
            <article class="card recipe-card">

                <div class="recipe-image-container">
                    <img id="{{recipe.recipe_url}}" src="/assets/{{recipe.recipe_url}}.png" alt="{{recipe.title}}">
                </div>
                <div class="recipe-text-container">
                    <h4>{{recipe.title}}</h4>
                    <p>por {{recipe.chef}}</p>
                    <a href="/admin/{{recipe.id}}">Visualizar</a>
                </div>

            </article>
        {% endfor %}

    </div>

</section>

{% endblock content %}