{% extends "parts/adminLayout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/recipes.css">
    <link rel="stylesheet" href="/styles/container.css">
    <link rel="stylesheet" href="/styles/modalAndCards.css">
    <script src="/scripts/scriptsModal.js" defer></script>

{% endblock head %}

{% block modal %}
 <div class="modal">
        <div class="modal-content">
            <div class="card-modal">
                <img src="" alt="">
                <h4></h4>
                <p></p>
                <div class="close-modal">
                    <p>Fechar Modal</p>
                </div>
            </div>        
        </div>
    </div>
{% endblock modal %}

{% block content %}

<section class="show-section">

    <header class="section-header">
        <h2>Gerenciar Receitas</h2>
        <a class="button" href="/admin/recipes/create">Criar Receita</a>
    </header>

    <div class="cards-container">

        {% for recipe in recipes %}
            <article class="card recipe-card">

                <div class="card-image-container">
                    <img src="{{recipe.image.src}}" alt="{{recipe.title}}">
                </div>
                <div class="card-text-container">
                    <h4>{{recipe.title}}</h4>
                    <p>por {{recipe.chef_name}}</p>
                    <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                </div>

            </article>
        {% endfor %}

    </div>

</section>

{% endblock content %}